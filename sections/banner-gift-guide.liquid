{% comment %}
  Banner Gift Guide Section
  Features: Top bar with left label + center text + right CTA, hero with headline/subcopy/CTA, bottom strip
  Settings: All text elements editable, optional background image
{% endcomment %}

{%- liquid
  assign top_left_label = section.settings.top_left_label
  assign top_center_text = section.settings.top_center_text
  assign top_cta_label = section.settings.top_cta_label
  assign top_cta_url = section.settings.top_cta_url
  assign headline = section.settings.headline
  assign subcopy = section.settings.subcopy
  assign primary_cta_label = section.settings.primary_cta_label
  assign primary_cta_url = section.settings.primary_cta_url
  assign footer_strip_text = section.settings.footer_strip_text
  assign bg_image = section.settings.bg_image
-%}

<style>
  .gift-guide-banner {
    --banner-bg: {{ bg_image | image_url: width: 1920 }};
    --banner-overlay: rgba(0, 0, 0, 0.4);
    --text-color: #ffffff;
    --accent-color: #f4f4f4;
    --border-color: #e0e0e0;
    --cta-bg: #000000;
    --cta-text: #ffffff;
    --cta-hover-bg: #333333;
  }

  .gift-guide-banner {
    position: relative;
    background: var(--banner-bg) center/cover no-repeat;
    color: var(--text-color);
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .gift-guide-banner::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--banner-overlay);
    z-index: 1;
  }

  .gift-guide-banner > * {
    position: relative;
    z-index: 2;
  }

  /* Top Bar */
  .banner-top-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    background: rgba(255, 255, 255, 0.95);
    color: #000;
    border-bottom: 1px solid var(--border-color);
  }

  .top-left-label {
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .top-center-text {
    font-size: 0.875rem;
    text-align: center;
    flex: 1;
    margin: 0 2rem;
  }

  .top-cta {
    font-size: 0.875rem;
    font-weight: 600;
    text-decoration: none;
    color: #000;
    padding: 0.5rem 1rem;
    border: 1px solid #000;
    border-radius: 4px;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .top-cta:hover {
    background: #000;
    color: #fff;
  }

  .top-cta .arrow {
    display: inline-block;
    margin-left: 0.5rem;
    transition: transform 0.3s ease;
  }

  .top-cta:hover .arrow {
    transform: translateX(4px);
  }

  /* Hero Section */
  .banner-hero {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 4rem 2rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-headline {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .hero-subcopy {
    font-size: clamp(1.125rem, 2.5vw, 1.5rem);
    line-height: 1.6;
    margin-bottom: 2.5rem;
    max-width: 600px;
    opacity: 0.95;
  }

  .primary-cta {
    display: inline-flex;
    align-items: center;
    font-size: 1.125rem;
    font-weight: 600;
    text-decoration: none;
    color: var(--cta-text);
    background: var(--cta-bg);
    padding: 1rem 2rem;
    border-radius: 6px;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .primary-cta:hover {
    background: var(--cta-hover-bg);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
  }

  .primary-cta .arrow {
    display: inline-block;
    margin-left: 0.75rem;
    transition: transform 0.3s ease;
  }

  .primary-cta:hover .arrow {
    transform: translateX(6px);
  }

  /* Footer Strip */
  .banner-footer-strip {
    background: rgba(255, 255, 255, 0.95);
    color: #000;
    text-align: center;
    padding: 1rem 2rem;
    border-top: 1px solid var(--border-color);
  }

  .footer-strip-text {
    font-size: 0.875rem;
    margin: 0;
  }

  /* Mobile Responsiveness */
  @media (max-width: 768px) {
    .banner-top-bar {
      flex-direction: column;
      gap: 1rem;
      padding: 1rem;
    }

    .top-center-text {
      margin: 0;
      order: 1;
    }

    .top-left-label {
      order: 2;
    }

    .top-cta {
      order: 3;
    }

    .banner-hero {
      padding: 3rem 1rem;
    }

    .hero-headline {
      font-size: clamp(2rem, 8vw, 3rem);
    }

    .hero-subcopy {
      font-size: clamp(1rem, 4vw, 1.25rem);
    }

    .primary-cta {
      font-size: 1rem;
      padding: 0.875rem 1.75rem;
    }
  }

  @media (max-width: 480px) {
    .banner-top-bar {
      padding: 0.75rem;
    }

    .banner-hero {
      padding: 2rem 1rem;
    }

    .hero-headline {
      font-size: clamp(1.75rem, 10vw, 2.5rem);
    }

    .hero-subcopy {
      font-size: clamp(0.875rem, 5vw, 1.125rem);
    }
  }
</style>

<div class="gift-guide-banner">
  <!-- Top Bar -->
  <div class="banner-top-bar">
    {% if top_left_label != blank %}
      <div class="top-left-label">{{ top_left_label }}</div>
    {% endif %}
    
    {% if top_center_text != blank %}
      <div class="top-center-text">{{ top_center_text }}</div>
    {% endif %}
    
    {% if top_cta_label != blank and top_cta_url != blank %}
      <a href="{{ top_cta_url }}" class="top-cta">
        {{ top_cta_label }}
        <span class="arrow">→</span>
      </a>
    {% endif %}
  </div>

  <!-- Hero Section -->
  <div class="banner-hero">
    {% if headline != blank %}
      <h1 class="hero-headline">{{ headline }}</h1>
    {% endif %}
    
    {% if subcopy != blank %}
      <p class="hero-subcopy">{{ subcopy }}</p>
    {% endif %}
    
    {% if primary_cta_label != blank and primary_cta_url != blank %}
      <a href="{{ primary_cta_url }}" class="primary-cta">
        {{ primary_cta_label }}
        <span class="arrow">→</span>
      </a>
    {% endif %}
  </div>

  <!-- Footer Strip -->
  {% if footer_strip_text != blank %}
    <div class="banner-footer-strip">
      <p class="footer-strip-text">{{ footer_strip_text }}</p>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Gift Guide Banner",
  "settings": [
    {
      "type": "text",
      "id": "top_left_label",
      "label": "Top Left Label",
      "default": "Limited Time"
    },
    {
      "type": "text",
      "id": "top_center_text",
      "label": "Top Center Text",
      "default": "Free shipping on orders over $50"
    },
    {
      "type": "text",
      "id": "top_cta_label",
      "label": "Top CTA Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "top_cta_url",
      "label": "Top CTA URL"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "The Perfect Gift Awaits"
    },
    {
      "type": "textarea",
      "id": "subcopy",
      "label": "Subcopy",
      "default": "Discover thoughtful presents for everyone on your list"
    },
    {
      "type": "text",
      "id": "primary_cta_label",
      "label": "Primary CTA Label",
      "default": "Start Shopping"
    },
    {
      "type": "url",
      "id": "primary_cta_url",
      "label": "Primary CTA URL"
    },
    {
      "type": "text",
      "id": "footer_strip_text",
      "label": "Footer Strip Text",
      "default": "Holiday returns extended until January 31st"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image (Optional)"
    }
  ],
  "presets": [
    {
      "name": "Gift Guide Banner"
    }
  ]
}
{% endschema %}
